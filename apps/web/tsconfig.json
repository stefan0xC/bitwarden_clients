{
  "extends": "../../libs/shared/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2020",
    "resolveJsonModule": true,
    "paths": {
      "@bitwarden/web-vault/*": ["src/*"],
      "@bitwarden/common/*": ["../../libs/common/src/*"],
      "@bitwarden/angular/*": ["../../libs/angular/src/*"],
      "@bitwarden/components": ["../../libs/components/src"],
      "@bitwarden/importer": ["../../libs/importer/src"],
      "@bitwarden/exporter/*": ["../../libs/exporter/src/*"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "preserveWhitespaces": true
  },
  "files": ["src/polyfills.ts", "src/main.ts"],
  "include": [
    "src/connectors/*.ts",
    "src/**/*.stories.ts",
    "src/**/*.spec.ts",
    "../../libs/common/src/platform/services/**/*.worker.ts"
  ],
  "exclude": ["apps/web/src/app/billing/organizations/secrets-manager/*.ts"]
}
